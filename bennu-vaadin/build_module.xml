<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="Module Compilation Targets">

	<target name="pre-compile">
		<condition property="containsEmbeddedProcessor">
			<resourcecontains resource="${build_home}/WEB-INF/classes/.compileProcessors"
					substring="pt.ist.vaadinframework.annotation.EmbeddedAnnotationProcessor"/>
		</condition>
		<antcall target="appendProcessor"/>
	</target>

	<target name="appendProcessor" unless="containsEmbeddedProcessor">
		<echo file="${build_home}/WEB-INF/classes/.compileProcessors"
			append="yes"
			message=",pt.ist.vaadinframework.annotation.EmbeddedAnnotationProcessor"/>
	</target>

	<target name="post-compile">
	</target>

</project>