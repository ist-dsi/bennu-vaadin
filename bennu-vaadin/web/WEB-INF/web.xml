<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>bennu-vaadin</display-name>
	<context-param>
		<description>Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>
	<servlet>
		<servlet-name>bennu</servlet-name>
		<servlet-class>org.vaadin.navigator7.NavigableApplicationServlet</servlet-class>
		<init-param>
			<description>Vaadin application class to start</description>
			<param-name>application</param-name>
			<param-value>pt.ist.bennu.vaadin.ui.BennuApplication</param-value>
		</init-param>
		<init-param>
			<description>Navigator7 WebApplication class to start (optionnal)</description>
			<param-name>webApplication</param-name>
			<param-value>pt.ist.bennu.vaadin.ui.BennuWebApplication</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>bennu</servlet-name>
		<url-pattern>/bennu/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>bennu</servlet-name>
		<url-pattern>/VAADIN/*</url-pattern>
	</servlet-mapping>
</web-app>
